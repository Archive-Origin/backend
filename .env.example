# Copy this file to .env and adjust values as needed.
DATABASE_URL=postgresql://archiveorigin:supersecret@db:5432/origin_proofs
VERIFY_BASE_URL=https://verify.archiveorigin.com
DEVICE_TOKEN_TTL_SECONDS=2592000
DEVICE_TOKEN_RENEWAL_BUFFER=604800
LOG_LEVEL=INFO
# Set to 'true' to enforce ed25519 signature verification on /lock-proof
VERIFY_SIGNATURES=false
# Ledger batch configuration
LEDGER_REPO_ROOT=ledger
LEDGER_BATCHES_SUBDIR=batches
LEDGER_ROOTS_SUBDIR=roots
LEDGER_PROOFS_SUBDIR=proofs
LEDGER_ROOT_INDEX_FILENAME=ledger_index.json
LEDGER_DAILY_ROOTS_FILENAME=daily_roots.csv
LEDGER_PROOF_MANIFEST_FILENAME=proof_manifest.jsonl
LEDGER_GIT_AUTO_COMMIT=false
LEDGER_GIT_AUTO_PUSH=false
LEDGER_GIT_REMOTE=origin
LEDGER_GIT_BRANCH=main
# DeviceCheck configuration
DEVICECHECK_ENABLED=false
DEVICECHECK_TEAM_ID=
DEVICECHECK_KEY_ID=
DEVICECHECK_PRIVATE_KEY_PATH=
DEVICECHECK_PRIVATE_KEY=
DEVICECHECK_ENVIRONMENT=production
DEVICECHECK_ALLOWED_BUNDLE_IDS=["com.example.archiveorigin"]
# Attestation & CRL
ATTESTATION_SEED_DIR=
CRL_SOURCES=[]
CRL_AUTO_REFRESH=false
CRL_REFRESH_INTERVAL_SECONDS=3600
CRL_REQUEST_TIMEOUT_SECONDS=5.0
